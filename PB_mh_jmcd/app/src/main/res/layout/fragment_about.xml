<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/fragment_background"
    tools:context=".MainActivity$PlaceholderFragment"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >




            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_appicon"
                android:layout_gravity="center"


                />


            <TextView
                android:text="Project Blaze"
                android:textSize="30px"
                android:id="@+id/textView1"

                android:gravity="center_horizontal"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />


            <TextView
                android:text="Version 1.0"
                android:textSize="20px"
                android:id="@+id/textView2"

                android:gravity="center_horizontal"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />



            <TextView
                android:text="Developed by:"
                android:textSize="20px"
                android:id="@+id/textView3"

                android:gravity="center_horizontal"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />


            <TextView
                android:text="Michael Horn"
                android:textSize="20px"
                android:id="@+id/textView4"

                android:gravity="center_horizontal"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />


            <TextView
                android:text="Jordan McDonough"
                android:textSize="20px"
                android:id="@+id/textView5"

                android:gravity="center_horizontal"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                />


            <Button
                android:id="@+id/btn_ack"
                android:text="Acknowledgments"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20px"

                android:background="@drawable/ack_button"

                android:textColor="@color/whitee"
                android:layout_marginBottom="20dp"/>


            <TextView
                android:id="@+id/textShare"
                android:text="Share on"
                android:textSize="30px"


                android:gravity="center_horizontal"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                />

                <Button
                    android:id="@+id/btn_facebook"
                    android:text="Facebook"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20px"

                    android:background="@drawable/facebook_button"

                    android:textColor="@color/whitee"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn_twitter"
                    android:text="Twitter"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20px"


                    android:background="@drawable/twitter_button"

                    android:textColor="@color/whitee"
                    android:layout_marginBottom="20dp"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:gravity="center_vertical|center_horizontal"
                    />


        <TextView
            android:id="@+id/text1"
            android:text=""
            android:textSize="20px"


            android:gravity="center_horizontal"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/text2"
            android:text=""
            android:textSize="20px"


            android:gravity="center_horizontal"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/text3"
            android:text=""
            android:textSize="20px"


            android:gravity="center_horizontal"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/text4"
            android:text=""
            android:textSize="20px"


            android:gravity="center_horizontal"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/text5"
            android:text=""
            android:textSize="20px"


            android:gravity="center_horizontal"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/text6"
            android:text=""
            android:textSize="20px"


            android:gravity="center_horizontal"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />




    </LinearLayout>
</LinearLayout>
